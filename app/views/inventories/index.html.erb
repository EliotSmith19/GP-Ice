<div class="container-form">
  <div class="my-form">
    <div class="container">
      <h2><%= @van.name%>`s store Inventories</h2>
      <p><strong>Driver Name:</strong> <%= @user.first_name %></p>
    </div>
    <div class="container">
      <%= link_to "Add product to the list", new_van_inventory_path(@van), class: "btn-main" %>
      <%= link_to "View your orders", van_orders_path(@van), class: "btn-main" %>
    </div>
  </div>
</div>


<div class="my-container">
  <% if @inventories.empty? %>
    <div class="container">
      <p>No products available in this van.</p>
    </div>

  <% else %>
    <ul>
      <% @inventories.each do |inventory| %>
        <li>
            <div class="product-card">
              <div class="product-info">

                <h3><strong><%= inventory.product.name %></strong></h3>
                <hr class="product-line">
                <p><%= inventory.product.description %></p>
                <p><strong><%= number_to_currency(inventory.price) %></strong></p>
                <%#= link_to "Edit product", van_product_path(@van, inventory.product), class: "btn-main" %>
                <span>Quantity Available: <%= inventory.quantity_available %></span>
                <br><br>
                <%# <div class="d-flex justify-content-between">
                  <div> %>
                    <%= link_to "Amend",  edit_van_inventory_path(inventory.van, inventory), class: "btn btn-main"%>
                  <%# </div>
                  <div> %>
                    <%= link_to "Delete",  van_inventory_path(inventory.van, inventory), class: "btn-delete", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this item?" } %>
                  <%# </div>
                </div> %>

              </div>

              <%# <div class="product-image"> %>
                <% if inventory.product.photo.present? %>
                  <%= image_tag inventory.product.photo, alt: inventory.product.name, class: "product-image" %>
                <% else %>
                  <%= image_tag 'default_product_image.png', alt: 'Default Image' %>
                <% end %>
              <%# </div> %>
            </div>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
