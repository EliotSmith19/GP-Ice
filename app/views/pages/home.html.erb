<div class="landing-page">

  <div class="navbar-container">
    <div class="logo">
      <%= link_to root_path do %>
        <%= image_tag("logo.png") %>
      <% end %>
    </div>
    <div class = "nav-links">
      <ul>
        <li><%= link_to "Home", root_path  %></li>
        <li><%= link_to "Store", vans_path %></li>
        <li><%= link_to "Cart", "#" %></li>
        <li><%= link_to "Profile", edit_user_registration_path %></li>
        <li><% if current_user.present? %>
          <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to "Sign in", new_user_session_path %>
        <% end %>
        </li>
      </ul>
    </div>
  </div>


  <div class="hero-section">
    <h1>Find. Track. Enjoy. Ice Cream Has Never Been Closer!</h1>

    <div class="search-bar">
      <input type="text" placeholder="Enter your postcode">
      <button>Search</button>
    </div>

    <div class="product-list">
      <div class="product">

        <img src="<%= asset_path('cone-icon.jpg') %>" alt="Cone">

        <div class="rating">
          <span>⭐</span>
          <span>⭐</span>
          <span>⭐</span>
          <span>⭐</span>
          <span>⭐</span>
        </div>
      </div>

      <div class="product">

        <img src="<%= asset_path('cone-icon.jpg') %>" alt="Ice Cream Cone">

        <div class="rating">
          <span>⭐</span>
          <span>⭐</span>
          <span>⭐</span>
          <span>⭐</span>
          <span>⭐</span>
        </div>
      </div>

      <div class="product">

        <img src="<%= asset_path('cone-icon.jpg') %>" alt="Ice Cream Cone">

        <div class="rating">
          <span>⭐</span>
          <span>⭐</span>
          <span>⭐</span>
          <span>⭐</span>
          <span>⭐</span>
        </div>
      </div>

    </div>
  </div>
</div>
