<h1>Create Your Own Order</h1>

<p><strong>Order Number:</strong> <%= Order.maximum(:id).to_i + 1 %></p>

<p><strong>User Email:</strong> <%= current_user.email %></p>

<h3>Products in this Order</h3>
<%= form_with url: orders_path, method: :post do |f| %>
  <% 5.times do |i| %>
    <div class="form-group">
      <%= label_tag "product_#{i}", "Select Product ##{i + 1}" %>
      <%= select_tag "product_ids[]", options_from_collection_for_select(@products, :id, :name), prompt: "Choose a product", class: "form-control" %>
    </div>
  <% end %>

  <%= f.submit "Submit Order", class: "btn btn-primary mt-3" %>
<% end %>

<%= link_to "Back to Orders List", orders_path, class: "btn btn-secondary mt-3" %>
