<div class="card">
  <% orders.each do |order| %>
    <div class="card-details">
      <p><%= order.id %></p>
      <div style="display: flex; justify-content: space-between;">
         
      <p><%= link_to "#{order.van.name.truncate(10)}",van_path(order.van_id), data: { turbo: false } %></p>
      </div>
      <p><%= order.confirmed_status %></p>
      <p><%= order.paid_status %></p>
      <p><%= order.created_at.strftime("%Y-%m-%d %H:%M") %></p>

      <% if order.confirmed_status == true && order.review.blank? %>
        <%= form_with(url: new_order_review_path(order), method: :get, local: true) do |f| %>
          <%= hidden_field_tag :order_id, order.id %>
          <p><%= link_to "Add Review", new_order_review_path(order), data: { turbo: false } %></p>
        <% end %>
      <%= link_to "Track Order", van_tracking_path(order.van_id), data: {turbo: false} %>
      <% end %>
    </div>
  <% end %>
</div>
