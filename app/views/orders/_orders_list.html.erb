<div class="card">
  
  <% orders.each do |order| %>
    <div class="card-details">
      <p><%= order.id %></p>
      <p><%= order.van_id %></p>
      <p><%= order.confirmed_status %></p>
      <p><%= order.paid_status %></p>
      <p><%= order.created_at.strftime("%Y-%m-%d %H:%M") %></p>
    </div>
  <% end %>
</div>
