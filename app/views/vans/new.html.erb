<div class="container-form">
  <div class="my-form">

    <h2 class="pink-title">Register as a Van Driver</h2>
    <%= image_tag ("vanregister.png"), id: "van-reg" %>

    <%= simple_form_for @van do |f| %>
      <div>
        <%= f.input :name, label: "Name" %>
      </div>

      <div>
        <%= f.input :location, label: "Location" %>
      </div>

      <%= f.submit "Register", class: "btn-main" %>
    <% end %>

  </div>
</div>
